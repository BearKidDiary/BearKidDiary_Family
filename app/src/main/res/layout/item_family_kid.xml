<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFEFDB"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <bearkid.com.bearkiddiaryfamily.ui.view.CircleImageview
            android:id="@+id/civ_family_kid_avatar"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:layout_margin="16dp"
            android:scaleType="fitCenter"
            android:src="@drawable/avatar" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/civ_family_kid_avatar"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="大宝"
                android:textColor="#000000"
                android:textSize="20sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="6岁"
                android:textSize="18sp" />
        </LinearLayout>

        <bearkid.com.bearkiddiaryfamily.ui.view.IconButton
            android:id="@+id/ib_family_kid_graph"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_centerVertical="true"
            android:layout_margin="16dp"
            android:layout_toLeftOf="@+id/ib_family_kid_show"
            android:padding="8dp"
            android:scaleType="fitCenter"
            android:src="@drawable/child_graph" />

        <bearkid.com.bearkiddiaryfamily.ui.view.IconButton
            android:id="@+id/ib_family_kid_show"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_margin="16dp"
            android:padding="8dp"
            android:scaleType="fitCenter"
            android:src="@drawable/child_show" />
    </RelativeLayout>

    <com.gc.materialdesign.views.Card
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#fff"
        android:layout_margin="16dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="英语课"
            android:layout_margin="16dp"
            android:textColor="#000"
            android:textSize="20sp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="星期六"
                android:layout_margin="16dp"
                android:textSize="14sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="春田花花幼稚园"
                android:layout_margin="16dp"
                android:textSize="14sp" />
        </LinearLayout>
    </com.gc.materialdesign.views.Card>
</LinearLayout>