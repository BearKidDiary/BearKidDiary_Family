<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="8dp"
    android:layout_marginLeft="@dimen/activity_horizontal_margin"
    android:layout_marginRight="@dimen/activity_horizontal_margin"
    android:layout_marginTop="8dp"
    android:background="@drawable/drawable_edit_normal"
    android:gravity="center_vertical"
    android:padding="16dp">

    <TextView
        android:id="@+id/tv_personal_info_hint"
        style="@style/style_text_black"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <EditText
        android:id="@+id/et_personal_info"
        style="@style/style_text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_weight="1"
        android:background="@color/bg_white"
        android:singleLine="true" />

    <ImageView
        android:id="@+id/iv_personal_info_clear"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:src="@drawable/ic_clear_edit" />

    <Button
        android:id="@+id/btn_personal_info_gender_male"
        android:layout_width="0dp"
        android:layout_height="32dp"
        android:layout_marginLeft="16dp"
        android:layout_weight="1"
        android:background="@color/gender_normal"
        android:text="@string/male"
        android:textColor="@color/text_white"
        android:visibility="gone" />

    <Button
        android:id="@+id/btn_personal_info_gender_female"
        android:layout_width="0dp"
        android:layout_height="32dp"
        android:layout_weight="1"
        android:background="@color/gender_normal"
        android:text="@string/female"
        android:textColor="@color/text_white"
        android:visibility="gone" />
</LinearLayout>